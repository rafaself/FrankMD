<!-- Help and About Dialogs - managed by help controller -->
<div data-controller="help">
  <!-- Help Dialog (Markdown Cheatsheet & Keyboard Shortcuts) -->
  <dialog
    class="p-0 rounded-lg shadow-xl backdrop:bg-black/50 bg-[var(--theme-bg-secondary)] border border-[var(--theme-border)] max-w-4xl w-full max-h-[85vh]"
    data-help-target="helpDialog"
    data-app-target="helpDialog"
  >
    <div class="p-4 text-[var(--theme-text-primary)] overflow-y-auto">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold"><%= t('dialogs.help.title') %></h3>
        <div class="flex items-center gap-2">
          <span class="text-xs text-[var(--theme-text-muted)]"><%= t('dialogs.help.toggle_hint') %></span>
          <%= render "shared/dialog_close_button", action: "click->help#closeHelp", size: "w-5 h-5" %>
        </div>
      </div>

      <!-- Tab buttons -->
      <div class="flex gap-1 mb-4" role="tablist" data-action="wheel->help#onTabWheel">
        <button
          type="button"
          role="tab"
          data-help-target="tabMarkdown"
          data-tab="markdown"
          data-action="click->help#switchTab keydown->help#onTabKeydown"
          class="px-3 py-1 text-sm rounded-md bg-[var(--theme-accent)] text-[var(--theme-accent-text)]"
        ><%= t('dialogs.help.tab_markdown') %></button>
        <button
          type="button"
          role="tab"
          data-help-target="tabShortcuts"
          data-tab="shortcuts"
          data-action="click->help#switchTab keydown->help#onTabKeydown"
          class="px-3 py-1 text-sm rounded-md hover:bg-[var(--theme-bg-hover)] text-[var(--theme-text-muted)]"
        ><%= t('dialogs.help.tab_shortcuts') %></button>
      </div>

      <!-- Markdown Cheatsheet Panel -->
      <div data-help-target="panelMarkdown">
        <div class="grid grid-cols-2 gap-4">
          <!-- Column 1 -->
          <div class="space-y-3">
            <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
              <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.headings') %></h4>
              <div class="grid grid-cols-2 gap-2 text-sm">
                <code class="font-mono text-[var(--theme-text-secondary)]"># Heading 1</code>
                <span class="text-xl font-bold">Heading 1</span>
                <code class="font-mono text-[var(--theme-text-secondary)]">## Heading 2</code>
                <span class="text-lg font-bold">Heading 2</span>
                <code class="font-mono text-[var(--theme-text-secondary)]">### Heading 3</code>
                <span class="text-base font-bold">Heading 3</span>
              </div>
            </div>

            <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
              <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.emphasis') %></h4>
              <div class="grid grid-cols-2 gap-2 text-sm">
                <code class="font-mono text-[var(--theme-text-secondary)]">**bold**</code>
                <span class="font-bold">bold</span>
                <code class="font-mono text-[var(--theme-text-secondary)]">*italic*</code>
                <span class="italic">italic</span>
                <code class="font-mono text-[var(--theme-text-secondary)]">~~strikethrough~~</code>
                <span class="line-through">strikethrough</span>
                <code class="font-mono text-[var(--theme-text-secondary)]">`inline code`</code>
                <code class="bg-[var(--theme-code-bg)] px-1 rounded text-sm">inline code</code>
              </div>
            </div>

            <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
              <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.lists') %></h4>
              <div class="grid grid-cols-2 gap-2 text-sm">
                <div class="font-mono text-[var(--theme-text-secondary)]">
                  <div>- Item 1</div>
                  <div>- Item 2</div>
                </div>
                <div>
                  <div>&bull; Item 1</div>
                  <div>&bull; Item 2</div>
                </div>
                <div class="font-mono text-[var(--theme-text-secondary)]">
                  <div>1. First</div>
                  <div>2. Second</div>
                </div>
                <div>
                  <div>1. First</div>
                  <div>2. Second</div>
                </div>
              </div>
            </div>

            <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
              <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.task_list') %></h4>
              <div class="grid grid-cols-2 gap-2 text-sm">
                <div class="font-mono text-[var(--theme-text-secondary)]">
                  <div>- [x] Done</div>
                  <div>- [ ] Todo</div>
                </div>
                <div>
                  <div><input type="checkbox" checked disabled class="mr-1">Done</div>
                  <div><input type="checkbox" disabled class="mr-1">Todo</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Column 2 -->
          <div class="space-y-3">
            <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
              <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.links_images') %></h4>
              <div class="space-y-2 text-sm">
                <div class="grid grid-cols-2 gap-2">
                  <code class="font-mono text-[var(--theme-text-secondary)]">[text](url)</code>
                  <a href="#" class="text-[var(--theme-accent)] underline">text</a>
                </div>
                <div class="grid grid-cols-2 gap-2">
                  <code class="font-mono text-[var(--theme-text-secondary)]">![alt](image.jpg)</code>
                  <span class="text-[var(--theme-text-muted)]">[image]</span>
                </div>
              </div>
            </div>

            <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
              <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.blockquote') %></h4>
              <div class="grid grid-cols-2 gap-2 text-sm">
                <code class="font-mono text-[var(--theme-text-secondary)]">> Quote text</code>
                <blockquote class="border-l-2 border-[var(--theme-accent)] pl-2 italic text-[var(--theme-text-muted)]">Quote text</blockquote>
              </div>
            </div>

            <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
              <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.code_block') %></h4>
              <div class="text-sm space-y-1">
                <div class="font-mono text-[var(--theme-text-secondary)]">
                  <div>```javascript</div>
                  <div>const x = 1;</div>
                  <div>```</div>
                </div>
                <pre class="bg-[var(--theme-code-bg)] p-2 rounded text-xs"><code>const x = 1;</code></pre>
              </div>
            </div>

            <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
              <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.table') %></h4>
              <div class="text-sm space-y-1">
                <div class="font-mono text-[var(--theme-text-secondary)] text-xs">
                  <div>| Col 1 | Col 2 |</div>
                  <div>| ----- | ----- |</div>
                  <div>| A     | B     |</div>
                </div>
                <table class="text-xs border-collapse">
                  <tr><th class="border border-[var(--theme-border)] px-2">Col 1</th><th class="border border-[var(--theme-border)] px-2">Col 2</th></tr>
                  <tr><td class="border border-[var(--theme-border)] px-2">A</td><td class="border border-[var(--theme-border)] px-2">B</td></tr>
                </table>
              </div>
            </div>

            <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
              <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.horizontal_rule') %></h4>
              <div class="grid grid-cols-2 gap-2 text-sm items-center">
                <code class="font-mono text-[var(--theme-text-secondary)]">---</code>
                <hr class="border-[var(--theme-border)]">
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Keyboard Shortcuts Panel -->
      <div data-help-target="panelShortcuts" class="hidden">
        <div class="grid grid-cols-2 gap-4">
          <!-- Column 1 -->
          <div class="space-y-3">
            <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
              <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.shortcuts.file_operations') %></h4>
              <div class="space-y-1.5 text-sm">
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Ctrl+S</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.save') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Ctrl+N</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.new_note') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Ctrl+P</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.file_finder') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Ctrl+Shift+F</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.search_files') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Ctrl+F</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.find') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Ctrl+H</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.replace') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Ctrl+G</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.go_to_line') %></span>
                </div>
              </div>
            </div>

            <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
              <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.shortcuts.editor') %></h4>
              <div class="space-y-1.5 text-sm">
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Ctrl+E</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.toggle_sidebar') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Ctrl+Shift+V</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.toggle_preview') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Ctrl+\</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.typewriter_mode') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Ctrl+L</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.toggle_line_numbers') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Ctrl+Shift++</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.increase_width') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Ctrl+Shift+-</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.decrease_width') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Tab</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.indent') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Shift+Tab</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.unindent') %></span>
                </div>
              </div>
            </div>

            <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
              <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.shortcuts.insert') %></h4>
              <div class="space-y-1.5 text-sm">
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Ctrl+Shift+E</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.emoji_picker') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Ctrl+M</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.format_menu') %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-xs text-[var(--theme-text-muted)]"><%= t('dialogs.help.shortcuts.context_menu') %></span>
                </div>
              </div>
            </div>
          </div>

          <!-- Column 2 -->
          <div class="space-y-3">
            <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
              <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.shortcuts.text_format') %></h4>
              <div class="space-y-1.5 text-sm">
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Ctrl+B</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.bold') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Ctrl+I</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.italic') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">S</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.strikethrough') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">H</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.highlight') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">U</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.subscript') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">P</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.superscript') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">L</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.link') %></span>
                </div>
              </div>
            </div>

            <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
              <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.shortcuts.dialogs') %></h4>
              <div class="space-y-1.5 text-sm">
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">F1</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.help') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Ctrl+Shift+O</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.log_viewer') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Escape</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.close_dialog') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">←/→</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.switch_tabs') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">↑/↓/←/→</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.navigate_items') %></span>
                </div>
                <div class="flex justify-between">
                  <kbd class="px-1.5 py-0.5 text-xs font-mono bg-[var(--theme-bg-primary)] rounded border border-[var(--theme-border)]">Enter</kbd>
                  <span class="text-[var(--theme-text-secondary)]"><%= t('dialogs.help.shortcuts.select_confirm') %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </dialog>

  <!-- About Dialog -->
  <dialog
    class="p-0 rounded-lg shadow-xl backdrop:bg-black/50 bg-[var(--theme-bg-secondary)] border border-[var(--theme-border)] w-[400px]"
    data-help-target="aboutDialog"
    data-app-target="aboutDialog"
  >
    <div class="p-6 text-[var(--theme-text-primary)]">
      <!-- Close button -->
      <div class="flex justify-end mb-2">
        <%= render "shared/dialog_close_button", action: "click->help#closeAbout" %>
      </div>

      <!-- Logo -->
      <div class="flex justify-center mb-4">
        <img src="/icon.svg" class="w-32 h-32" alt="<%= t('app.name') %>">
      </div>

      <!-- App Name -->
      <h2 class="text-xl font-bold text-center mb-2"><%= t('app.name') %></h2>
      <p class="text-sm text-[var(--theme-text-muted)] text-center mb-4">
        <%= t('dialogs.about.description') %>
      </p>

      <!-- Copyright -->
      <p class="text-xs text-[var(--theme-text-faint)] text-center mb-4">
        &copy; <%= Time.current.year %> Fabio Akita. <%= t('dialogs.about.copyright') %>
      </p>

      <!-- GitHub Link -->
      <div class="flex justify-center">
        <a
          href="https://github.com/akitaonrails/FrankMD"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 text-sm rounded-md bg-[var(--theme-bg-tertiary)] hover:bg-[var(--theme-bg-hover)] text-[var(--theme-text-secondary)] transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
          </svg>
          <%= t('dialogs.about.view_github') %>
        </a>
      </div>
    </div>
  </dialog>
</div>
