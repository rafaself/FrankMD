<!-- Image Picker Dialog -->
<dialog
  class="p-0 rounded-lg shadow-xl backdrop:bg-black/50 bg-[var(--theme-bg-secondary)] border border-[var(--theme-border)] w-[700px] max-w-[90vw] max-h-[90vh] overflow-hidden"
  data-controller="image-picker"
  data-image-picker-target="dialog"
  data-action="image-picker:image-selected->app#onImageSelected"
>
  <div class="text-[var(--theme-text-primary)] flex flex-col h-full max-h-[90vh]">
    <!-- Header -->
    <div class="flex-shrink-0 px-4 pt-4">
      <%= render "shared/dialog_header", title: t('dialogs.image_picker.title'), close_action: "click->image-picker#closeDialog", margin_bottom: "mb-0" %>
    </div>

    <!-- Tabs -->
    <div class="flex-shrink-0 flex border-b border-[var(--theme-border)] px-4 mt-2" role="tablist" data-action="wheel->image-picker#onTabWheel">
      <button
        type="button"
        role="tab"
        data-action="click->image-picker#switchTab keydown->image-picker#onTabKeydown"
        data-tab="local"
        data-image-picker-target="tabLocal"
        class="px-4 py-2 text-sm font-medium border-b-2 border-[var(--theme-accent)] text-[var(--theme-accent)]"
      >
        <%= t('dialogs.image_picker.tab_local') %>
      </button>
      <button
        type="button"
        role="tab"
        data-action="click->image-picker#switchTab keydown->image-picker#onTabKeydown"
        data-tab="folder"
        data-image-picker-target="tabFolder"
        class="px-4 py-2 text-sm font-medium border-b-2 border-transparent text-[var(--theme-text-muted)] hover:text-[var(--theme-text-secondary)]"
      >
        <%= t('dialogs.image_picker.tab_folder') %>
      </button>
      <button
        type="button"
        role="tab"
        data-action="click->image-picker#switchTab keydown->image-picker#onTabKeydown"
        data-tab="web"
        data-image-picker-target="tabWeb"
        class="px-4 py-2 text-sm font-medium border-b-2 border-transparent text-[var(--theme-text-muted)] hover:text-[var(--theme-text-secondary)]"
      >
        <%= t('dialogs.image_picker.tab_web') %>
      </button>
      <button
        type="button"
        role="tab"
        data-action="click->image-picker#switchTab keydown->image-picker#onTabKeydown"
        data-tab="google"
        data-image-picker-target="tabGoogle"
        class="px-4 py-2 text-sm font-medium border-b-2 border-transparent text-[var(--theme-text-muted)] hover:text-[var(--theme-text-secondary)]"
      >
        <%= t('dialogs.image_picker.tab_google') %>
      </button>
      <button
        type="button"
        role="tab"
        data-action="click->image-picker#switchTab keydown->image-picker#onTabKeydown"
        data-tab="pinterest"
        data-image-picker-target="tabPinterest"
        class="px-4 py-2 text-sm font-medium border-b-2 border-transparent text-[var(--theme-text-muted)] hover:text-[var(--theme-text-secondary)]"
      >
        <%= t('dialogs.image_picker.tab_pinterest') %>
      </button>
      <button
        type="button"
        role="tab"
        data-action="click->image-picker#switchTab keydown->image-picker#onTabKeydown"
        data-tab="ai"
        data-image-picker-target="tabAi"
        class="px-4 py-2 text-sm font-medium border-b-2 border-transparent text-[var(--theme-text-muted)] hover:text-[var(--theme-text-secondary)]"
      >
        <%= t('dialogs.image_picker.tab_ai') %>
      </button>
    </div>

    <!-- Scrollable Content Area -->
    <div class="flex-1 min-h-0 overflow-y-auto">

    <!-- Tab Content: Local Images (server-side images_path) -->
    <div
      class="p-4"
      data-image-picker-target="panelLocal"
      data-controller="local-images"
      data-action="local-images:selected->image-picker#onSourceSelected"
    >
      <!-- Configuration Required Notice -->
      <div class="hidden" data-local-images-target="configNotice">
        <div class="p-4 bg-[var(--theme-bg-tertiary)] rounded-lg text-center">
          <svg class="w-10 h-10 mx-auto mb-3 text-[var(--theme-text-muted)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <h4 class="text-sm font-semibold mb-2"><%= t('dialogs.image_picker.local_path_required') %></h4>
          <p class="text-xs text-[var(--theme-text-muted)] mb-3">
            <%= t('dialogs.image_picker.local_path_description') %>
          </p>
          <div class="text-xs text-left bg-[var(--theme-bg-primary)] p-3 rounded border border-[var(--theme-border)] mb-3">
            <p class="mb-2"><strong><%= t('dialogs.video.quick_setup') %></strong></p>
            <ol class="list-decimal list-inside space-y-1 text-[var(--theme-text-muted)]">
              <li><%= t('dialogs.image_picker.local_setup_step_1') %></li>
              <li><%= t('dialogs.image_picker.local_setup_step_2') %></li>
            </ol>
          </div>
        </div>
      </div>

      <!-- Search Form (shown when configured) -->
      <div data-local-images-target="form">
        <div class="mb-3">
          <input
            type="text"
            data-local-images-target="search"
            data-action="input->local-images#onSearch"
            class="w-full px-3 py-2 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)]"
            placeholder="<%= t('dialogs.image_picker.search_images_placeholder') %>"
          >
        </div>

        <!-- Image Grid -->
        <div class="grid grid-cols-5 gap-2 mb-4 min-h-[200px] max-h-[300px] overflow-y-auto" data-local-images-target="grid">
          <!-- Images will be rendered by JavaScript -->
        </div>
      </div>

      <%= render "notes/dialogs/s3_option", mode: "upload" %>
    </div>

    <!-- Tab Content: Folder (browser folder picker) -->
    <div
      class="p-4 hidden"
      data-image-picker-target="panelFolder"
      data-controller="folder-images"
      data-action="folder-images:selected->image-picker#onSourceSelected"
    >
      <!-- API Not Supported Notice -->
      <div class="hidden" data-folder-images-target="apiNotice">
        <div class="p-4 bg-[var(--theme-bg-tertiary)] rounded-lg text-center">
          <svg class="w-10 h-10 mx-auto mb-3 text-[var(--theme-text-muted)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
          </svg>
          <h4 class="text-sm font-semibold mb-2"><%= t('dialogs.image_picker.filesystem_api_required') %></h4>
          <p class="text-xs text-[var(--theme-text-muted)] mb-3">
            <%= t('dialogs.image_picker.filesystem_api_description') %>
          </p>
          <div class="text-xs text-left bg-[var(--theme-bg-primary)] p-3 rounded border border-[var(--theme-border)] mb-3">
            <p class="mb-2"><strong><%= t('dialogs.image_picker.enable_in_brave') %></strong></p>
            <ol class="list-decimal list-inside space-y-1 text-[var(--theme-text-muted)]">
              <li><%= t('dialogs.image_picker.brave_step_1') %></li>
              <li><%= t('dialogs.image_picker.brave_step_2') %></li>
              <li><%= t('dialogs.image_picker.brave_step_3') %></li>
              <li><%= t('dialogs.image_picker.brave_step_4') %></li>
            </ol>
            <p class="mt-3 mb-2"><strong><%= t('dialogs.image_picker.supported_browsers') %></strong></p>
            <p class="text-[var(--theme-text-muted)]"><%= t('dialogs.image_picker.supported_browsers_list') %></p>
            <p class="mt-2 text-[var(--theme-text-muted)]"><%= t('dialogs.image_picker.not_supported_note') %></p>
          </div>
        </div>
      </div>

      <!-- Browse folder prompt (shown when API available) -->
      <div class="hidden" data-folder-images-target="browsePrompt">
        <div class="flex flex-col items-center justify-center py-6">
          <svg class="w-10 h-10 mb-3 text-[var(--theme-text-muted)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
          </svg>
          <p class="text-sm text-[var(--theme-text-muted)] mb-3 text-center">
            <%= t('dialogs.image_picker.select_folder_prompt') %>
          </p>
          <button
            type="button"
            data-action="click->folder-images#browse"
            class="px-4 py-2 bg-[var(--theme-accent)] text-[var(--theme-accent-text)] rounded-md hover:bg-[var(--theme-accent-hover)] text-sm font-medium"
          >
            <%= t('dialogs.image_picker.browse_folder') %>
          </button>
        </div>
      </div>

      <!-- Grid for folder images (shown after folder selected) -->
      <div class="hidden" data-folder-images-target="container">
        <div class="flex items-center justify-between mb-3">
          <span class="text-xs text-[var(--theme-text-muted)]" data-folder-images-target="status"><%= t('dialogs.image_picker.no_folder_selected') %></span>
          <button
            type="button"
            data-action="click->folder-images#browse"
            class="text-xs text-[var(--theme-accent)] hover:underline"
          >
            <%= t('dialogs.image_picker.change_folder') %>
          </button>
        </div>
        <!-- Search -->
        <div class="mb-3">
          <input
            type="text"
            data-folder-images-target="search"
            data-action="input->folder-images#onSearch"
            class="w-full px-3 py-2 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)]"
            placeholder="<%= t('dialogs.image_picker.search_images_placeholder') %>"
          >
        </div>
        <div class="grid grid-cols-5 gap-2 mb-4 min-h-[200px] max-h-[300px] overflow-y-auto" data-folder-images-target="grid">
          <!-- Images will be rendered by JavaScript -->
        </div>
      </div>

      <%= render "notes/dialogs/s3_option", mode: "upload", description: t('dialogs.s3_option.upload_description') %>
    </div>

    <!-- Tab Content: Web Search (Bing/DuckDuckGo) -->
    <div
      class="p-4 hidden"
      data-image-picker-target="panelWeb"
      data-controller="web-images"
      data-action="web-images:selected->image-picker#onSourceSelected"
    >
      <!-- Search -->
      <div class="mb-3">
        <div class="flex gap-2">
          <input
            type="text"
            data-web-images-target="search"
            data-action="keydown->web-images#onSearchKeydown"
            class="flex-1 px-3 py-2 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)]"
            placeholder="<%= t('dialogs.image_picker.search_web_placeholder') %>"
          >
          <button
            type="button"
            data-action="click->web-images#search"
            data-web-images-target="searchBtn"
            class="px-4 py-2 text-sm rounded-md bg-[var(--theme-accent)] text-[var(--theme-accent-text)] hover:bg-[var(--theme-accent-hover)] flex items-center gap-1"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <%= t('common.search') %>
          </button>
        </div>
      </div>

      <!-- Status -->
      <div class="mb-2 text-xs text-[var(--theme-text-muted)]" data-web-images-target="status">
        <%= t('dialogs.image_picker.search_status') %>
      </div>

      <!-- Image Grid -->
      <div class="grid grid-cols-4 gap-2 mb-4 min-h-[200px] max-h-[350px] overflow-y-auto" data-web-images-target="grid">
        <!-- Images will be rendered by JavaScript -->
      </div>

      <%= render "notes/dialogs/s3_option", mode: "reupload" %>
    </div>

    <!-- Tab Content: Google Images (requires API key) -->
    <div
      class="p-4 hidden"
      data-image-picker-target="panelGoogle"
      data-controller="google-images"
      data-action="google-images:selected->image-picker#onSourceSelected"
    >
      <!-- Configuration Required Notice -->
      <div class="hidden" data-google-images-target="configNotice">
        <div class="p-4 bg-[var(--theme-bg-tertiary)] rounded-lg text-center">
          <svg class="w-10 h-10 mx-auto mb-3 text-[var(--theme-text-muted)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
          <h4 class="text-sm font-semibold mb-2"><%= t('dialogs.image_picker.google_api_required') %></h4>
          <p class="text-xs text-[var(--theme-text-muted)] mb-3">
            <%= t('dialogs.image_picker.google_api_description') %>
          </p>
          <div class="text-xs text-left bg-[var(--theme-bg-primary)] p-3 rounded border border-[var(--theme-border)] mb-3">
            <p class="mb-2"><strong><%= t('dialogs.video.quick_setup') %></strong></p>
            <ol class="list-decimal list-inside space-y-1 text-[var(--theme-text-muted)]">
              <li><%= t('dialogs.video.setup_step_1') %></li>
              <li><%= t('dialogs.image_picker.google_setup_step_2') %></li>
              <li><%= t('dialogs.image_picker.google_setup_step_3') %></li>
            </ol>
          </div>
          <a
            href="https://github.com/akitaonrails/FrankMD#optional-google-image-search"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1 text-xs text-[var(--theme-accent)] hover:underline"
          >
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
            </svg>
            <%= t('dialogs.video.view_setup_instructions') %>
          </a>
        </div>
      </div>

      <!-- Search Form (shown when configured) -->
      <div data-google-images-target="form">
        <!-- Search -->
        <div class="mb-3">
          <div class="flex gap-2">
            <input
              type="text"
              data-google-images-target="search"
              data-action="keydown->google-images#onSearchKeydown"
              class="flex-1 px-3 py-2 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)]"
              placeholder="<%= t('dialogs.image_picker.search_google_placeholder') %>"
            >
            <button
              type="button"
              data-action="click->google-images#search"
              data-google-images-target="searchBtn"
              class="px-4 py-2 text-sm rounded-md bg-[var(--theme-accent)] text-[var(--theme-accent-text)] hover:bg-[var(--theme-accent-hover)] flex items-center gap-1"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              <%= t('common.search') %>
            </button>
          </div>
        </div>

        <!-- Status -->
        <div class="mb-2 text-xs text-[var(--theme-text-muted)]" data-google-images-target="status">
          <%= t('dialogs.image_picker.search_status') %>
        </div>

        <!-- Image Grid with infinite scroll -->
        <div
          class="grid grid-cols-4 gap-2 mb-4 min-h-[200px] max-h-[350px] overflow-y-auto"
          data-google-images-target="grid"
          data-action="scroll->google-images#onScroll"
        >
          <!-- Images will be rendered by JavaScript -->
        </div>
      </div>

      <%= render "notes/dialogs/s3_option", mode: "reupload" %>
    </div>

    <!-- Tab Content: Pinterest -->
    <div
      class="p-4 hidden"
      data-image-picker-target="panelPinterest"
      data-controller="pinterest-images"
      data-action="pinterest-images:selected->image-picker#onSourceSelected"
    >
      <!-- Search -->
      <div class="mb-3">
        <div class="flex gap-2">
          <input
            type="text"
            data-pinterest-images-target="search"
            data-action="keydown->pinterest-images#onSearchKeydown"
            class="flex-1 px-3 py-2 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)]"
            placeholder="<%= t('dialogs.image_picker.search_pinterest_placeholder') %>"
          >
          <button
            type="button"
            data-action="click->pinterest-images#search"
            data-pinterest-images-target="searchBtn"
            class="px-4 py-2 text-sm rounded-md bg-[var(--theme-error)] text-white hover:opacity-90 flex items-center gap-1"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <%= t('common.search') %>
          </button>
        </div>
      </div>

      <!-- Status -->
      <div class="mb-2 text-xs text-[var(--theme-text-muted)]" data-pinterest-images-target="status">
        <%= t('dialogs.image_picker.search_status') %>
      </div>

      <!-- Image Grid -->
      <div class="grid grid-cols-4 gap-2 mb-4 min-h-[200px] max-h-[350px] overflow-y-auto" data-pinterest-images-target="grid">
        <!-- Images will be rendered by JavaScript -->
      </div>

      <%= render "notes/dialogs/s3_option", mode: "reupload" %>
    </div>

    <!-- Tab Content: AI Image Generation -->
    <div
      class="p-4 hidden"
      data-image-picker-target="panelAi"
      data-controller="ai-images"
      data-action="ai-images:selected->image-picker#onSourceSelected"
    >
      <!-- Configuration Required Notice -->
      <div class="hidden" data-ai-images-target="configNotice">
        <div class="p-4 bg-[var(--theme-bg-tertiary)] rounded-lg text-center">
          <svg class="w-10 h-10 mx-auto mb-3 text-[var(--theme-text-muted)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <h4 class="text-sm font-semibold mb-2"><%= t('dialogs.image_picker.gemini_api_required') %></h4>
          <p class="text-xs text-[var(--theme-text-muted)] mb-3">
            <%= t('dialogs.image_picker.gemini_api_description') %>
          </p>
          <div class="text-xs text-left bg-[var(--theme-bg-primary)] p-3 rounded border border-[var(--theme-border)] mb-3">
            <p class="mb-2"><strong><%= t('dialogs.video.quick_setup') %></strong></p>
            <ol class="list-decimal list-inside space-y-1 text-[var(--theme-text-muted)]">
              <li><%= t('dialogs.image_picker.gemini_setup_step_1') %></li>
              <li><%= t('dialogs.image_picker.gemini_setup_step_2') %></li>
              <li><%= t('dialogs.image_picker.gemini_setup_step_3') %></li>
            </ol>
          </div>
        </div>
      </div>

      <!-- AI Generation Form (shown when configured) -->
      <div data-ai-images-target="form" class="hidden">
        <!-- Model Display -->
        <div class="mb-3 text-xs text-[var(--theme-text-muted)]">
          <%= t('dialogs.image_picker.model_label') %> <span data-ai-images-target="model" class="font-medium text-[var(--theme-text-secondary)]"></span>
        </div>

        <!-- Reference Image Section (optional) -->
        <div class="mb-3 hidden" data-ai-images-target="refSection">
          <label class="block text-xs text-[var(--theme-text-muted)] mb-1">
            <%= t('dialogs.image_picker.reference_image_label') %>
          </label>

          <!-- Selected Reference Preview -->
          <div class="hidden mb-2 p-2 bg-[var(--theme-bg-tertiary)] rounded-lg" data-ai-images-target="refPreviewContainer">
            <div class="flex items-center gap-3">
              <img data-ai-images-target="refPreview" class="w-16 h-16 object-cover rounded" alt="Reference" />
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium truncate" data-ai-images-target="refName"></p>
                <button
                  type="button"
                  data-action="click->ai-images#clearRefImage"
                  class="text-xs text-[var(--theme-error)] hover:underline"
                >
                  <%= t('dialogs.image_picker.remove_reference') %>
                </button>
              </div>
            </div>
          </div>

          <!-- Reference Image Search & Grid -->
          <div data-ai-images-target="refPicker">
            <input
              type="text"
              data-ai-images-target="refSearch"
              data-action="input->ai-images#onRefSearch"
              class="w-full px-3 py-1.5 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)] mb-2"
              placeholder="<%= t('dialogs.image_picker.search_reference_placeholder') %>"
            >
            <div class="grid grid-cols-6 gap-1.5 max-h-[120px] overflow-y-auto" data-ai-images-target="refGrid">
              <!-- Reference images will be rendered by JavaScript -->
            </div>
          </div>
        </div>

        <!-- Prompt Input -->
        <div class="mb-3">
          <label class="block text-xs text-[var(--theme-text-muted)] mb-1"><%= t('dialogs.image_picker.prompt_label') %></label>
          <textarea
            data-ai-images-target="prompt"
            data-action="keydown->ai-images#onPromptKeydown"
            class="w-full px-3 py-2 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)] resize-none"
            rows="2"
            placeholder="<%= t('dialogs.image_picker.prompt_placeholder') %>"
          ></textarea>
        </div>

        <!-- Generate Button -->
        <div class="mb-4">
          <button
            type="button"
            data-action="click->ai-images#generate"
            data-ai-images-target="generateBtn"
            class="px-4 py-2 text-sm rounded-md bg-[var(--theme-accent)] text-[var(--theme-accent-text)] hover:bg-[var(--theme-accent-hover)] flex items-center gap-2"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            <%= t('dialogs.image_picker.generate_image') %>
          </button>
        </div>

        <!-- Processing Overlay -->
        <div class="hidden" data-ai-images-target="processing">
          <div class="p-8 bg-[var(--theme-bg-tertiary)] rounded-lg text-center">
            <svg class="animate-spin w-8 h-8 mx-auto mb-3 text-[var(--theme-accent)]" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <p class="text-sm text-[var(--theme-text-secondary)] mb-1"><%= t('dialogs.image_picker.generating_with') %> <span data-ai-images-target="processingModel" class="font-medium text-[var(--theme-accent)]"></span></p>
            <p class="text-xs text-[var(--theme-text-muted)]"><%= t('editor.press_esc_to_cancel') %></p>
          </div>
        </div>

        <!-- Generated Image Preview -->
        <div class="hidden" data-ai-images-target="result">
          <div class="flex gap-4">
            <!-- Image Preview (left side) -->
            <div class="flex-shrink-0">
              <label class="block text-xs text-[var(--theme-text-muted)] mb-1"><%= t('dialogs.image_picker.generated_image') %></label>
              <div class="border border-[var(--theme-border)] rounded-lg overflow-hidden bg-[var(--theme-bg-tertiary)]">
                <img data-ai-images-target="preview" class="max-w-[200px] max-h-[150px] object-contain" alt="Generated image" />
              </div>
            </div>

            <!-- Options (right side) -->
            <div class="flex-1 min-w-0">
              <!-- Revised Prompt (if available) -->
              <div class="hidden mb-3" data-ai-images-target="revisedPromptContainer">
                <label class="block text-xs text-[var(--theme-text-muted)] mb-1"><%= t('dialogs.image_picker.revised_prompt') %></label>
                <p class="text-xs text-[var(--theme-text-secondary)] bg-[var(--theme-bg-tertiary)] p-2 rounded line-clamp-2" data-ai-images-target="revisedPrompt"></p>
              </div>

              <!-- Save Options -->
              <div class="space-y-2" data-ai-images-target="s3Option">
                <label class="block text-xs text-[var(--theme-text-muted)] mb-1"><%= t('dialogs.image_picker.save_to') %></label>
                <label class="flex items-center gap-2 text-sm cursor-pointer">
                  <input
                    type="radio"
                    name="aiImageSaveOption"
                    value="local"
                    checked
                    class="text-[var(--theme-accent)] focus:ring-[var(--theme-accent)]"
                  >
                  <span><%= t('dialogs.image_picker.save_local') %></span>
                </label>
                <label class="flex items-center gap-2 text-sm cursor-pointer">
                  <input
                    type="radio"
                    name="aiImageSaveOption"
                    value="s3"
                    data-ai-images-target="saveS3"
                    class="text-[var(--theme-accent)] focus:ring-[var(--theme-accent)]"
                  >
                  <span><%= t('dialogs.image_picker.save_s3') %></span>
                </label>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div><!-- End Scrollable Content Area -->

    <!-- Selected Image Options (shared across all tabs) -->
    <div class="flex-shrink-0 border-t border-[var(--theme-border)] px-4 pt-3 hidden max-h-[200px] overflow-y-auto" data-image-picker-target="options">
      <div class="flex items-center gap-2 mb-3 text-sm">
        <span class="text-[var(--theme-text-muted)]"><%= t('dialogs.image_picker.selected') %></span>
        <span class="font-medium truncate max-w-md" data-image-picker-target="selectedName"></span>
      </div>

      <!-- Options -->
      <div class="space-y-3">
        <!-- Alt Text -->
        <div>
          <label class="block text-xs text-[var(--theme-text-muted)] mb-1"><%= t('dialogs.image_picker.alt_label') %></label>
          <input
            type="text"
            data-image-picker-target="alt"
            class="w-full px-3 py-2 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)]"
            placeholder="<%= t('dialogs.image_picker.alt_placeholder') %>"
          >
        </div>

        <!-- Link URL -->
        <div>
          <label class="block text-xs text-[var(--theme-text-muted)] mb-1"><%= t('dialogs.image_picker.link_label') %></label>
          <input
            type="text"
            data-image-picker-target="link"
            class="w-full px-3 py-2 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)]"
            placeholder="<%= t('dialogs.image_picker.link_placeholder') %>"
          >
        </div>
      </div>
    </div>

    <!-- Loading Indicator -->
    <div class="flex-shrink-0 hidden items-center justify-center py-8 px-4" data-image-picker-target="loading">
      <svg class="animate-spin w-6 h-6 text-[var(--theme-accent)]" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <span class="ml-2 text-sm text-[var(--theme-text-muted)]" data-image-picker-target="loadingText"><%= t('dialogs.image_picker.uploading_to_s3') %></span>
    </div>

    <!-- Footer -->
    <div class="flex-shrink-0 flex justify-end gap-2 px-4 pb-4 pt-4 border-t border-[var(--theme-border)]">
      <%= render "shared/button_secondary", label: t('common.cancel'), action: "click->image-picker#closeDialog" %>
      <button
        type="button"
        data-action="click->image-picker#insertImage"
        data-image-picker-target="insertBtn"
        class="px-3 py-1.5 text-sm rounded-md bg-[var(--theme-accent)] text-[var(--theme-accent-text)] hover:bg-[var(--theme-accent-hover)] disabled:opacity-50 disabled:cursor-not-allowed"
        disabled
      >
        <%= t('dialogs.image_picker.insert_image') %>
      </button>
    </div>
  </div>
</dialog>
