<dialog
  class="p-0 rounded-lg shadow-xl backdrop:bg-black/50 bg-[var(--theme-bg-secondary)] border border-[var(--theme-border)]"
  data-app-target="newItemDialog"
>
  <form method="dialog" class="p-4 w-80 text-[var(--theme-text-primary)]" data-action="submit->app#submitNewItem">
    <h3 class="text-sm font-semibold mb-3" data-app-target="newItemTitle"><%= t('dialogs.new_item.new_note') %></h3>
    <input
      type="text"
      data-app-target="newItemInput"
      class="w-full px-3 py-2 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)]"
      placeholder="<%= t('dialogs.new_item.placeholder') %>"
    >
    <div class="flex justify-end gap-2 mt-4">
      <%= render "shared/button_secondary", label: t('common.cancel'), action: "click->app#closeNewItemDialog" %>
      <%= render "shared/button_primary", label: t('common.create'), type: "submit" %>
    </div>
  </form>
</dialog>
