<%# Warning banner (amber)
   Parameters:
   - target_attr: Raw data attribute string, e.g. 'data-connection-monitor-target="banner"' (required)
   - message: Text to display (required)
   - icon_animate: CSS class for icon animation, e.g. "animate-pulse" (optional)
   - buttons: Array of { label:, action: } hashes (required)
%>
<div class="hidden bg-amber-500 dark:bg-amber-600 text-white px-4 py-2 text-sm flex items-center justify-center gap-3 z-50"
     <%= target_attr %>>
  <svg class="w-5 h-5 <%= local_assigns[:icon_animate] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
  </svg>
  <span><%= message %></span>
  <% buttons.each do |btn| %>
    <button type="button"
            data-action="<%= btn[:action] %>"
            class="px-3 py-1 bg-white/20 hover:bg-white/30 rounded text-xs font-medium">
      <%= btn[:label] %>
    </button>
  <% end %>
</div>
