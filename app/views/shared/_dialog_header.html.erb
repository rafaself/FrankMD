<%# Dialog header with title and close button
   Parameters:
   - title: Dialog title text (required)
   - close_action: Stimulus action for close button (required)
   - margin_bottom: Tailwind margin class (default: 'mb-3')
%>
<div class="flex items-center justify-between <%= local_assigns[:margin_bottom] || 'mb-3' %>">
  <h3 class="text-sm font-semibold"><%= title %></h3>
  <%= render "shared/dialog_close_button", action: close_action %>
</div>
